// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum PostType {
  NOTICE
  COMMUNITY
}

enum MealType {
  LUNCH
  DINNER
}

enum EventType {
  ACADEMIC
  PROJECT
  PERSONAL
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  nickname    String
  avatarColor String?
  role        Role      @default(STUDENT)
  posts       Post[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String    @db.Text
  category    String?
  type        PostType
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  viewCount   Int       @default(0)
  likeCount   Int       @default(0)
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyKnowledge {
  id          Int      @id @default(autoincrement())
  keyword     String
  title       String
  description String
  content     String   @db.Text
  date        DateTime @unique
}

model Menu {
  id       Int      @id @default(autoincrement())
  date     DateTime
  mealType MealType
  items    String[]
}

model Event {
  id    Int       @id @default(autoincrement())
  title String
  date  DateTime
  time  String?
  color String?
  type  EventType @default(PERSONAL)
}