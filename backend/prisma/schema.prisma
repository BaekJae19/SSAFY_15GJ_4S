// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enums are not supported in SQLite, using String instead
// Role: STUDENT, ADMIN
// PostType: NOTICE, COMMUNITY
// MealType: LUNCH, DINNER
// EventType: ACADEMIC, PROJECT, PERSONAL

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  nickname    String
  avatarColor String?
  role        String    @default("STUDENT")
  posts       Post[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  category    String?
  type        String
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  viewCount   Int       @default(0)
  likeCount   Int       @default(0)
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyKnowledge {
  id          Int      @id @default(autoincrement())
  keyword     String
  title       String
  description String
  content     String
  date        DateTime @unique
}

model Menu {
  id       Int      @id @default(autoincrement())
  date     DateTime
  mealType String
  items    String   // Stored as JSON string or comma-separated
}

model Event {
  id    Int       @id @default(autoincrement())
  title String
  date  DateTime
  time  String?
  color String?
  type  String    @default("PERSONAL")
}
